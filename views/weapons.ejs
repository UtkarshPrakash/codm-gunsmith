<!DOCTYPE html>
<html>
    <head>
        <title> <%= title %> </title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <h2> GUNSMITH </h2>
        <div class="container">
            <% for (let i=0; i < data.length; i++) { %>
                <div class="weapon">
                    <%= data[i].name %>
                    <button class="gunsmith-btn" onclick="showDetails('<%= JSON.stringify(data[i]) %>')"> Gunsmith </button>
                </div>
            <% } %>
        </div>

        <!-- Dialog Box -->
         <div id="weapon-dialog" class="dialog hidden" onclick="closeDialog()">
            <div class="dialog-content" onclick="event.stopPropagation()">
                <span class="close-btn" onclick="closeDialog()"> &times; </span>
                <h2 id="weapon-name"></h2>
                <div id="setup-options"></div>
                <img id="gunsmith-img" class="setup-img" alt="Image of gunsmith setup">
            </div>
         </div>
        
        <script src="/script.js"></script>
    </body>
</html>